<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="Question" table="question">
    <indexes>
      <index name="question_theme_id_foreign" columns="theme_id"/>
    </indexes>
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="type" type="boolean" column="type" nullable="false"/>
    <field name="text" type="text" column="text" length="65535" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="image" type="string" column="image" length="100" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="complexity" type="boolean" column="complexity" nullable="false"/>
    <field name="time" type="smallint" column="time" nullable="false">
      <options>
        <option name="unsigned"/>
      </options>
    </field>
    <many-to-one field="theme" target-entity="Theme" fetch="LAZY">
      <join-columns>
        <join-column name="theme_id" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
  </entity>
</doctrine-mapping>
