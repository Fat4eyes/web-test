{
    "name": "laravel/laravel",
    "description": "The Laravel Framework.",
    "keywords": ["framework", "laravel"],
    "license": "MIT",
    "type": "project",
    "require": {
        "php": ">=5.6.4",
        "laravel/framework": "5.3.*",
	"laravelcollective/remote": "5.3.*",
        "laravel-doctrine/orm": "1.2.*",
        "illuminate/queue" : "5.3.*",
	"illuminate/console": "5.3.*",
        "predis/predis":"~1.0",
        "jeroennoten/laravel-ckeditor": "^3.7",
        "kalnoy/nestedset": "^4.1",
        "trupedia/laravel-blade-haml": "~1.0",
        "barryvdh/laravel-elfinder": "^0.3.8"
    },
    "require-dev": {
        "fzaninotto/faker": "~1.4",
        "mockery/mockery": "0.9.*",
        "phpunit/phpunit": "~5.0",
        "symfony/css-selector": "3.1.*",
        "symfony/dom-crawler": "3.1.*",
	"illuminate/queue" : "5.3.*",
	"illuminate/console": "5.3.*",
	"laravelcollective/remote": "5.3.*",
        "laravel-doctrine/orm": "1.2.*",
        "trupedia/laravel-blade-haml": "~1.0"
    },
    "autoload": {
        "classmap": [
            "database",
            "app/Repositories",
            "app/Managers",
            "app/Helpers",
            "app/Entities",
            "app/ViewModels",
            "app/TestEngine",
	    "app/CodeQuestionEngine",
            "app/Http/Controllers/Core",
	    "app/Http/Middleware"
        ],
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "classmap": [
            "tests/TestCase.php",
	        "app/Repositories",
            "app/Managers",
            "app/Helpers",
            "app/Entities",
            "app/ViewModels",
            "app/TestEngine",
	    "app/CodeQuestionEngine",
            "app/Http/Controllers/Core",
	    "app/Http/Middleware"
        ],
        "psr-4": {
            "App\\": "app/"
        }
    },
    "scripts": {
        "post-root-package-install": [
            "php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "php artisan key:generate"
        ],
        "post-install-cmd": [
            "Illuminate\\Foundation\\ComposerScripts::postInstall",
            "php artisan optimize"
        ],
        "post-update-cmd": [
            "Illuminate\\Foundation\\ComposerScripts::postUpdate",
            "php artisan optimize"
        ]
    },
    "config": {
        "preferred-install": "dist"
    }
}
